{
  "name": "multimedia-worker",
  "version": "1.0.0",
  "description": "OpenAI APIを使用したマルチメディアコマンド生成ツール",
  "type": "module",
  "main": "electron/main.js",
  "scripts": {
    "dev": "npm run dev:client",
    "dev:server": "tsx backend/src/server.ts",
    "dev:server:lm": "tsx backend/src/server.local.ts",
    "dev:client": "vite --config frontend/vite.config.ts",
    "electron:dev": "cross-env ELECTRON_DEV=1 VITE_DEV_SERVER_URL=http://localhost:5173 electron .",
    "dev:desktop": "concurrently -k \"npm:dev:client\" \"npm run electron:dev\"",
    "start:desktop": "cross-env ELECTRON_DEV=0 electron .",
    "package:desktop": "npm run build && electron-builder",
    "build": "npm run build:server && npm run build:client",
    "build:server": "tsup backend/src/server.ts --format esm --splitting false --target node18 --out-dir dist/backend",
    "build:client": "vite build --config frontend/vite.config.ts",
    "preview:client": "vite preview --config frontend/vite.config.ts",
    "typecheck": "tsc -b",
    "test": "npm run test:backend && npm run test:frontend",
    "test:backend": "tsx backend/tests/agent.test.ts",
    "test:frontend": "vitest --run --config frontend/vite.config.ts"
  },
  "keywords": [
    "openai",
    "ffmpeg",
    "imagemagick",
    "exiftool"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^4.19.2",
    "multer": "^2.0.0",
    "openai": "^4.0.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/multer": "^1.4.11",
    "@types/node": "^22.7.4",
    "@types/react": "^18.3.11",
    "@types/react-dom": "^18.3.0",
    "@vitejs/plugin-react-swc": "^3.7.1",
    "concurrently": "^9.1.2",
    "cross-env": "^7.0.3",
    "electron": "^31.3.0",
    "electron-builder": "^25.1.6",
    "jsdom": "^27.0.1",
    "tsup": "^8.2.4",
    "tsx": "^4.19.2",
    "typescript": "^5.6.3",
    "vite": "^5.4.1",
    "vitest": "^4.0.2"
  },
  "build": {
    "appId": "com.example.multimediaworker",
    "productName": "MultiMediaWorker",
    "directories": {
      "buildResources": "electron"
    },
    "files": [
      "dist/backend/**/*",
      "frontend/dist/**/*",
      "electron/**/*",
      "node_modules/**/*",
      "package.json"
    ]
  }
}
